<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.william.speechpad_v0.HoraPorVoz"
    android:id="@+id/horaPorVoz"
    android:background="#ffffff"
    android:backgroundTint="#ffffff"
    android:backgroundTintMode="multiply">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:text="Hora"
        android:id="@+id/txtHoraPorVoz"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#455A64"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|normal"
        android:typeface="sans"
        android:textColorHighlight="@color/accent_material_light" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnVoltarHora"
        android:text="Menu Inicial"
        android:background="@drawable/botao_flat"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|normal" />
</RelativeLayout>
