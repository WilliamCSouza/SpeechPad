<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.william.speechpad.Categoria"
    android:id="@+id/categoria"
    android:background="#ffffff"
    android:backgroundTintMode="multiply"
    android:elevation="@dimen/abc_panel_menu_list_width">

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Criar Categoria"
        android:id="@+id/btnCriarCategoria"
        android:background="@drawable/botao_flat"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:textStyle="bold|normal"
        android:layout_alignEnd="@+id/listviewCategoria"
        android:layout_toEndOf="@+id/txtNomeCategoria" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listviewCategoria"
        android:choiceMode="singleChoice"
        android:elevation="@dimen/abc_panel_menu_list_width"
        android:background="#ffffff"
        style="@android:style/Theme.Panel"
        android:backgroundTint="#ffffff"
        android:backgroundTintMode="multiply"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnCriarCategoria" />

    <TextView
        android:id="@+id/txtNomeCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
