<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.william.speechpad_v0.CategoriaPorVoz"
    android:id="@+id/categoriaPorVoz"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:text="Categoria"
        android:id="@+id/txtCategoriaPorVoz"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#455A64"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|normal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVoltarCategoria"
        android:text="Menu Inicial"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/botao_flat"
        android:textColor="#ffffff"
        android:textStyle="bold|normal" />

</RelativeLayout>
