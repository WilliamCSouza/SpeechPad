<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="3dip" />
        </shape>
        <gradient android:angle="-90" android:startColor="#008375" android:endColor="#009688" />
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#008375"/>
            <solid android:color="#008375"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="3dip"/>
            <gradient android:angle="-90" android:startColor="#009688" android:endColor="#008375"/>
        </shape>
    </item>
</selector>